export VAULT_ADDR="https://vault.example.com"


# Policies creation example | Scretch

path "secret/data/swarm/paynet-test/*" 
{
   capabilities=["read"]
}



vault auth enable -path=paynet-test approle - enable approle at path

vault write auth/paynet-test/role/paynet-test token_policies="paynet-test" - create role with policy

vault read auth/paynet-test/role/paynet-test/role-id - get role-id

vault write -f auth/paynet-test/role/paynet-test/secret-id - get secret-id
